# ===================================================
# MyCellar Environment Variables
# ===================================================
# Copia questo file in .env e inserisci i tuoi valori reali
# IMPORTANTE: Non committare mai il file .env nel repository!

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=./mycellar.db
# Per PostgreSQL invece di SQLite, usa:
# DATABASE_URL=postgresql://username:password@localhost:5432/mycellar

# API Keys

# Global Wine Score API (gratuita)
# Registrati su: https://www.globalwinescore.com/api/
GLOBAL_WINE_SCORE_API_KEY=your_global_wine_score_api_key_here

# WineVybe API
# Contatta: https://winevybe.com/
WINEVYBE_API_KEY=your_winevybe_api_key_here

# Wine-Searcher API (a pagamento $350/mese)
# Richiedi accesso: https://www.wine-searcher.com/trade/api
WINE_SEARCHER_API_KEY=your_wine_searcher_api_key_here

# JWT Secret (per autenticazione multi-utente)
# Genera con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_generate_random_string

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://mycellar.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (opzionale, per notifiche)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# External API Configuration
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3

# Cache Configuration
CACHE_TTL=86400
CACHE_MAX_SIZE=1000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here

# Features Flags
ENABLE_VIVINO=true
ENABLE_GLOBAL_WINE_SCORE=true
ENABLE_WINEVYBE=true
ENABLE_WINE_SEARCHER=false

# AWS S3 Configuration (opzionale, per upload immagini)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-west-1
S3_BUCKET_NAME=mycellar-images

# Google Cloud Vision API (opzionale, per riconoscimento etichette)
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=./path/to/credentials.json

# Sentry (opzionale, per error tracking)
SENTRY_DSN=your_sentry_dsn_here

# Analytics (opzionale)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ===================================================
# Development / Production Specific
# ===================================================

# Development
# NODE_ENV=development
# PORT=3000

# Production
# NODE_ENV=production
# PORT=80
# SSL_CERT=/path/to/cert.pem
# SSL_KEY=/path/to/key.pem
